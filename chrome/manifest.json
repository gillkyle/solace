{
  "name": "Solace",
  "short_name": "Solace",
  "description": "Removes feeds and loud buttons from popular social media on your desktop browser.",
  "version": "1.00",
  "manifest_version": 2,
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "js": ["solace.js"],
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*"]
    },
    {
      "css": ["solace.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "run_at": "document_end"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "MacCtrl+Shift+T"
      },
      "description": "Opens Solace"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
